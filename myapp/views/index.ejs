<!DOCTYPE html>
<html lang="es">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
    rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
    href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
    rel="stylesheet">
<!-- Include Head -->


<%- include('./partials/head') %>


    <body class="home">


        <%- include('./partials/header') %>


            <!-- Banner -->
            <div class="banner">
                <img src="/images/banner.png" alt="Banner">
            </div>
            <!-- /Banner -->
            <!-- Novedades -->
            <div class="container products-wrapper">
                <div class="row">
                    <% for( let i=0; i < data.length; i++ ) { %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/product/detalle/<%= data[i].id %>">
                                    <figure class="product-box_image">
                                        <img src="/images/products/<%= data[i].imagen %>"
                                            alt="<%= data[i].nombre %>">
                                    </figure>
                                    <article class="product-box_data">
                                        <h1>
                                            <%= data[i].nombre %>
                                        </h1>
                                        <h2>
                                            <a href="/users/profile<%= data[i].usuario.id %>">
                                                <%= data[i].usuario.usuario %>
                                            </a>
                                        </h2>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <% } %>
                </div>
            </div>

            <%- include('./partials/footer') %>




    </body>


</html>