<!DOCTYPE html>
<html lang="es">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
<!-- Include Head -->


<%- include('./partials/head') %>


    <body>


        <%- include('./partials/header') %>


            <!-- Banner -->
            <div class="banner">
                <img src="/images/banner.png" alt="Banner">
            </div>
            <!-- /Banner -->
            <!-- Novedades -->
            <div class="container products-wrapper">
                <div class="row">
                    <% for( let i=0; i < 4; i++ ) { %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/product/detalle">
                                    <figure class="product-box_image">
                                        <img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2>
                                            <%= productos[i].nombre %>
                                        </h2>
                                        <p>
                                            <%= productos[i].descripcion %>
                                        </p>
                                        <p>
                                            <%= productos[i].comentarios.length %>
                                        </p>
                                    </article>
                                </a>
                            </section>
                        </div>
                        <% } %>
                </div>
            </div>
            <%- include('./partials/footer') %>




    </body>


</html>