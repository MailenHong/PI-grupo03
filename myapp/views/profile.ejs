<!DOCTYPE html>
<html lang="es">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
	rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
	href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
	rel="stylesheet">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/headerLogueado', {usuario}) %>
			<!-- /Header -->

			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="/images/users/<%= usuario.perfil %>" alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title">
								<%= usuario.usuario %>
									<a href="profile-edit.html">
										<i class="fas fa-cog"></i>
									</a>
							</h1>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						</div>
						<div>
							<ul class="">
								<li><%= total %> productos</li>
								<li>200 seguidores</li>
								<li>300 comentarios</li>
							</ul>
						</div>
					</div>
				</div>
			</section>
			<!-- /Datos del usuario -->

			<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Mis productos</h2>
					</div>

					<!-- Show mis productos -->
					<% for(let i = 0; i < productos.length; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
							<a href="/product/detalle/<%= productos[i].id %>">
								<figure class="product-box_image">
								<img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
								</figure>
								<div class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<p><%= productos[i].descripcion %></p>
								<a href="/product/detalle/<%= productos[i].id %>">Ver detalle</a>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
								</div>
							</a>
							</section>
						</div>
						<% } %>


							<!-- Copias pegadas de productos (sin cambios) -->
							<!-- ... pegado el resto igual al original ... -->

				</div>
			</div>
			<!-- /Mis productos -->


			<%- include('partials/footer') %>
	</body>

</html>