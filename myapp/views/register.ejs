<!DOCTYPE html>
<html lang="es">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
	rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
	href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
	rel="stylesheet">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<%- include('./partials/header') %>
			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Registrate</h2>
					</div>
					<!-- Show the "ultimos" products -->

					<main class="body_register">
						<section class="register-container">
							
							<form action="/users/register" class="register-form" method="POST">
								<div class="form-group">
									<label for="email"> Email: </label>
									<input type="email" name="email" id="email" placeholder="Ingres치 un correo"
										required>
										<% if (error.email) { %>
										 <p class = "error"></p><%= error.email %>
										<% } %>
								</div>
								<div class="form-group">
									<label for="usuario">Usuario: </label>
									<input type="text" name="usuario" placeholder="Nombre de usuario" required>
									<% if (error.usuario) { %>
										<p class = "error"></p><%= error.usuario %>
									   <% } %>
								</div>
								<div class="form-group">
									<label for="password">Contrase침a: </label>
									<input type="password" name="contrasena" id="password"
										placeholder="Ingres치 una contrase침a" required>
									<% if (error.contrasena) { %>
											<p class = "error"></p><%= error.contrasena %>
										   <% } %>
								</div>
								<div class="form-group">
									<label for="date">Fecha de nacimiento: </label>
									<input type="date" name="fecha" id="date" required>
								</div>
								<div class="form-group">
									<label for="documento">Documento: </label>
									<input type="number" name="dni" id="documento" placeholder="Documento"
										required>
								</div>
								<div class="form-group">
									<label for="fotoPerfil">Foto de perfil: </label>
									<input type="file" name="fotodeperfil" id="fotoPerfil">
								</div>
								<div class="form-group">
									<button type="submit" class="btn1"> Registrarse </button>
								</div>
							</form>
						</section>
					</main>

					<%- include('./partials/footer') %>
	</body>

</html>